{% extends "::base.html.twig" %}
{% block body %}
<div class="container">
    <div class="row">
        <div class="span12">
            <h2>Livraison</h2>
            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="span4">
                        {% if user.address|length > 0 %}
                        <form action="{{ path('cart.confirm') }}" method="post">
                            <h4>Adresse de livraison</h4>
                            {% for address in user.address %}
                                <label class="radio">
                                    <input type="radio" name="addressDelivery" value="{{ address.id }}" checked="checked">
                                    {{ address.firstname }} {{ address.name }}<br/>
                                    {{ address.complete }} <a href="{{ path('address.delete', {'id' : address.id}) }}"><i class="icon-trash"></i></a>
                                </label>
                            {% endfor %}
                            <br/><br/>

                            <h4>Adresse de facturation</h4>
                            {% for address in user.address %}
                                <label class="radio">
                                    <input type="radio" name="addressInvoice" value="{{ address.id }}" checked="checked">
                                    {{ address.firstname }} {{ address.name }}<br/>
                                    {{ address.complete }} <a href="{{ path('address.delete', {'id' : address.id}) }}"><i class="icon-trash"></i></a>
                                </label>
                            {% endfor %}
                            <button class="btn btn-primary">Valider mon adresse</button>
                        </form>
                        {% endif %}
                    </div>


                    <div class="span4 offset2">
                        <h4>Ajouter une nouvelle adresse</h4>
                        <form action="{{ path('address.add') }}" method="post">
                            {{ form_widget(form) }}
                            <button class="btn btn-primary" type="submit">Ajouter</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
{% endblock %}