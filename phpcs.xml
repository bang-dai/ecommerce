<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>The coding standard for PHP_CodeSniffer itself.</description>

    <file>src</file>
    <rule ref="PSR2">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <type>warning</type>
        <severity>4</severity>
    </rule>
</ruleset>